{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@types/node"],
    "paths": {
      "https://deno.land/*": ["./deno.d.ts"],
      "https://esm.sh/*": ["../node_modules/@supabase/supabase-js/dist/module/index.d.ts"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
